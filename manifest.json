{
  "manifest_version": 2,

  "name": "LinkSoup",
  "description": "This extension will let you save and share awesome links you run into!",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
    "background": {
        "scripts": ["popup.js", "firebase.js", "angularfire.min.js"]
    },
    
  "permissions": [
      "activeTab",
      "tabs"
   ]
}
